<h2>Sign in</h2>

<div class="row">

<div class="span4">&nbsp;</div>

<div class="span4">

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <%= f.email_field :email, :autofocus => true, :placeholder => "email", :class => "span4" %>
  <br/>
  <%= f.password_field :password, :placeholder => "password", :class => "span4" %>
  <div><%= f.submit "Sign in", :class => "btn btn-primary" %></div>
<% end %>

<%= render "devise/shared/links" %>

</div>

</div>

